              <h4>Feito por Vinicius e Emanuel em Dourados MS</h4>
              <h3>GEDAE - LockIFManager© 2019</h3>
            </div>
          </div>

          <%- body -%>
    </main>
  </body>
  <script>
    var trocar = true;
    function swapClasses() {
    if(trocar == true) {
      trocar = false;
      document.getElementById("menu").className = "menu-on";
     } 
     else if (trocar == false) {
      trocar = true;
      document.getElementById("menu").className = "menu";
     }
    }
  </script>
</html>

