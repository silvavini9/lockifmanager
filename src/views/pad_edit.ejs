<% layout('boilerplate') -%>
  <div class="cont-header">
    <h2>Pad Edit</h2>
  </div>
<div class="content">
    <form class="forms" action="./edit" method="post">
        <label for="name">Mac Adress</label>
        <input type="text" id="macAdress" name="macAdress" value="<%= pad.macAdress %>" disabled/>
        <label for="description">Nome</label>
        <input type="text" id="name" name="name" value="<%= pad.name %>"/>
        <label for="name">IP Wemos</label>
        <select name="wemosLis" id="wemosList">
        <% if (pad.wemos == ""){ %> 
            <option value="<%= pad.wemos._id  %>"><%= pad.wemos.IP %></option>
        <% }else{ %>
              <option value="<%= %>"></option>
              <% wemos.forEach( (wemo) => { %>
                <% if(pad.wemos != wemo._id){ %>
                  <option value="<%= wemo._id %>"><%= wemo.IP %></option>
                <% } %>
              <% }); %>
        <%} %>
        </select>
        <div class="btn-area">
          <button class="add-btn">Editar Wemos</button>
        </div>
    </form>
</div>